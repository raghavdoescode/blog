<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/jpg" href="/public/favicon.jpg" />
    <title>Articles</title>
  </head>
  <body>
    <h1>Blog</h1>
    <% articles.forEach(article => { %>
      <div class="stripe long"></div>
    <div class="article">
      <p class="article-title">
        <a href=<%= article.path %> ><%= article.title %> </a>
      </p>
      <p>
        <%= article.desc %>
      </p>
      </div>
    </div>
    <p><%= article.date %></p>
    <div class="stripe long"></div>
    <% }) %>
  </body>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap");
    body {
      background-color: #282828;
      font-family: "IBM Plex Mono";
      color: #fff;
      text-align: center;
      margin-bottom: 20px;
    }

    .container {
      padding: 20px 20px;
    }

    .card {
      box-shadow: 0 4px 8px 0 #368af8;
      transition: 0.3s;
      border-radius: 5px; /* 5px rounded corners */
    }

    .article-title {
      font-size: medium;
      font-weight: bold;
    }

    .stripe {
      display: block;
      max-width: 128px;
      height: 10px;
      border-radius: 1px;
      background-color: #282828;
      margin-bottom: 15px;
    }
    .stripe.long {
      max-width: 100%;
      width: 100%;
      height: 3px;
    }

    a {
      color: #98971a
    }

    a:visted {
      color: #fb4934
    }
  </style>
</html>
